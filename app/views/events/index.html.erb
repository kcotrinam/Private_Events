 <h1 class="title mt-5">Comming Events</h1>
   <div class="columns">
  <% Event.comming_events.each do |ce| %>
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-content">
          <p class="title is-4"><%= ce.title%></p>
          <p class="subtitle is-6"><%= ce.user.name%></p>
        </div>
      </div>

        <div class="content">
          <%= ce.description%>
            <div><%= ce.date%> </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<h1 class="title"> Past Events</h1>
<div class="columns">
<% Event.past_events.each do |pe|%>
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-content">
        <p class="title is-4"><%= pe.title%></p>
        <p class="subtitle is-6"><%= pe.user.name%></p>
      </div>
    </div>

      <div class="content">
        <%= ce.description%>
          <div><%= pe.date%> </div>
      </div>
    </div>
  </div>
<% end %>
</div>