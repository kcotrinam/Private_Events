

<% @users_list.each do |user| %>
  <%=user.name%>
  <%= form_with(model: @invitation, local: true) do |form| %>
    <div class="field">
      <%= form.hidden_field :attendee_id, value: user.id %>
    </div>

    <div class="field">
      <%= form.label :attended_event_id %>
      <%= form.collection_select(:attended_event_id, Event.all, :id, :title,
              { multiple: true, size: 3 }) %>
    </div>
    <div class="actions">
      <%= form.submit "Invite" %>
    </div>
  <% end %>
<% end %>


<%= link_to user_validation ,  logout_path %>
